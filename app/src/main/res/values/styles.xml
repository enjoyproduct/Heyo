<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ListItemIconStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/list_item_side_margin</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ListDateHeaderStyle" parent="MatchWidth">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_color_dark_grey</item>
        <!--<item name="typeface">roboto_medium</item>-->
    </style>

    <style name="DialogNameStyle" parent="MatchWidth">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DialogLastMessageStyle" parent="MatchWidth">
        <item name="android:textColor">@color/text_color_dark_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DialogUnreadCounterStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/list_item_side_margin</item>
        <item name="android:background">@drawable/shape_rectangle</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="UserIconStyle" parent="ListItemIconStyle">
        <item name="android:layout_marginLeft">@dimen/list_item_side_margin</item>
        <item name="android:padding">@dimen/padding_common</item>
    </style>

    <style name="UserTitleStyle" parent="WeightWidth">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WeightWidth">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WeightHeight">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>



    <style name="UserCheckboxStyle" parent="WrapContent">
        <item name="android:layout_marginRight">@dimen/list_item_side_margin</item>
        <item name="android:clickable">false</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="MessageContainerStyle" parent="MatchWidth">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_common</item>
    </style>

    <style name="MessageContentContainerStyle" parent="WrapContent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MessageAuthorStyle" parent="WrapContent">
        <item name="android:layout_marginLeft">@dimen/chat_message_username_margin</item>
        <item name="android:layout_marginRight">@dimen/chat_message_username_margin</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/text_color_dark_grey</item>
        <item name="android:textSize">@dimen/chat_author_text_size</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="typeface">roboto_bold</item>-->
    </style>

    <style name="MessageTextStyle" parent="WrapContent">
        <item name="android:layout_marginLeft">@dimen/chat_message_content_margin</item>
        <item name="android:layout_marginRight">@dimen/chat_message_content_margin</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/chat_message_body_text_size</item>
    </style>

    <style name="MessageInfoStyle" parent="WrapContent">
        <item name="android:paddingLeft">@dimen/padding_common</item>
        <item name="android:paddingRight">@dimen/padding_common</item>
        <item name="android:textColor">@color/text_color_dark_grey</item>
        <item name="android:textSize">@dimen/chat_message_info_text_size</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="FabStyle" parent="WrapContent">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/fab_margin_right</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="ListViewWithoutDividerStyle" parent="MatchParent">
        <item name="android:divider">@null</item>
    </style>

    <style name="BorderlessImageButtonStyle" parent="WrapContent">
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/padding_common</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="CenterProgressBarStyle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:color">@color/dark</item>
    </style>

    <style name="SplashAppTitleStyle" parent="WrapContent">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/splash_main_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_common</item>
        <!--<item name="typeface">roboto_light</item>-->
    </style>

    <style name="SplashAppVersionStyle" parent="WrapContent">
        <item name="android:textColor">@color/text_color_light_grey</item>
        <item name="android:textSize">@dimen/splash_version_text_size</item>
        <!--<item name="typeface">roboto_light</item>-->
    </style>



    <style name="AppTheme.BlueAccent">
        <item name="colorAccent">@color/color_blue_qb</item>
    </style>

    <!--custom styles-->
    <style name="ProgressDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/AlertTheme</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AlertTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
        <item name="android:editable">@color/transparent</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Black</item>
    </style>
    <style name="Widget.EditText.Black" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/font_blue_color</item>
    </style>
</resources>
