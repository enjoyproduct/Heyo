<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_12dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <com.heyoe.widget.MyCircularImageView
                android:id="@+id/civ_ipfnf_friend_avatar1"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:src="@drawable/user1"
                />
            <com.heyoe.widget.MyCircularImageView
                android:id="@+id/civ_ipfnf_friend_avatar2"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:src="@drawable/user4"
                android:layout_marginLeft="26dp"
                />
            <com.heyoe.widget.MyCircularImageView
                android:id="@+id/civ_ipfnf_friend_avatar3"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:src="@drawable/user3"
                android:layout_marginLeft="56dp"

                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_ipfnf_banner_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!--media-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_ipfnf_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/post1"/>
        <com.heyoe.widget.MyCircularImageView
            android:id="@+id/civ_ipfnf_av"
            android:layout_width="@dimen/avatar_bg_size"
            android:layout_height="@dimen/avatar_bg_size"
            android:src="@drawable/bg_circle_white"
            android:layout_alignBottom="@+id/iv_ipfnf_media"
            android:layout_marginBottom="-25dp"
            android:layout_marginLeft="@dimen/dimen_16dp"/>
        <com.heyoe.widget.MyCircularImageView
            android:id="@+id/civ_ipfnf_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:src="@drawable/user3"
            android:layout_alignBottom="@+id/iv_ipfnf_media"
            android:layout_marginBottom="-21dp"
            android:layout_marginLeft="21dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:layout_below="@+id/iv_ipfnf_media">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <com.heyoe.widget.MyCircularImageView
                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_12dp">
                        <TextView
                            android:id="@+id/tv_ipfnf_fullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Esra"
                            android:textSize="@dimen/txt_18sp"
                            android:singleLine="true"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tv_ipfnf_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_14sp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:text="3 weeks ago"/>
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/ib_ipfnf_add_friend"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:src="@drawable/ic_plus_green"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/dimen_16dp"
                        android:background="@color/transparent"/>
                </RelativeLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_ipfnf_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello, everybody"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/dimen_12dp"
        android:background="@color/dark"/>
    <!--social icons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_ipfnf_like"
            android:layout_width="@dimen/social_button_size"
            android:layout_height="@dimen/social_button_size"
            android:src="@drawable/ic_green_heart"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_20dp"/>
        <ImageButton
            android:id="@+id/ib_ipfnf_unlike"
            android:layout_width="@dimen/social_button_size"
            android:layout_height="@dimen/social_button_size"
            android:src="@drawable/ic_unlike_dark_border"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_20dp"/>
        <ImageButton
            android:id="@+id/ib_ipfnf_comment"
            android:layout_width="@dimen/social_button_size"
            android:layout_height="@dimen/social_button_size"
            android:src="@drawable/comment_dark_boarder"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_20dp"/>
        <ImageButton
            android:id="@+id/ib_ipfnf_share"
            android:layout_width="@dimen/social_button_size"
            android:layout_height="@dimen/social_button_size"
            android:src="@drawable/ic_share_dark_border"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_20dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/dimen_12dp"
        android:background="@color/dark"/>
</LinearLayout>
