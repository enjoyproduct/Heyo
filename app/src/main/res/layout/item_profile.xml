<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <!--media-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--header media-->
        <RelativeLayout
            android:id="@+id/rl_profile_header_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_profile_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/post3"
                android:adjustViewBounds="true"
               />
            <ImageButton
                android:id="@+id/ib_profile_play"
                android:layout_width="49dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_video"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimen_24dp"
                android:background="@color/transparent"
                />
        </RelativeLayout>

        <!--middle tabbar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/rl_profile_header_media">
            <!--username-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dimen_16dp"
                android:paddingLeft="@dimen/dimen_16dp"
                >
                <com.heyoe_chat.widget.MyCircularImageView
                    android:layout_width="@dimen/avatar_size_profile"
                    android:layout_height="10dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_profile_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_28dp"
                        android:layout_marginTop="@dimen/dimen_4dp">
                        <TextView
                            android:id="@+id/tv_profile_fullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Esra"
                            android:textSize="@dimen/txt_18sp"
                            android:singleLine="true"
                            android:textColor="@color/black"/>
                        <ImageView
                            android:id="@+id/iv_profile_celebrity"
                            android:layout_width="@dimen/dimen_20dp"
                            android:layout_height="@dimen/dimen_20dp"
                            android:src="@drawable/check"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/dimen_12dp"
                            android:background="@color/transparent"
                            android:visibility="visible"/>
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/ib_ip_add_friend"
                        android:layout_width="@dimen/dimen_32dp"
                        android:layout_height="@dimen/dimen_32dp"
                        android:src="@drawable/ic_green_plus"
                        android:layout_alignParentRight="true"
                        android:background="@color/transparent"/>

                </RelativeLayout>

            </LinearLayout>
            <!--middle tabbar-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_4dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_grayprofile"
                    />
                <!--middle tabbar-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    >
                    <!--info-->
                    <RelativeLayout
                        android:id="@+id/rl_profile_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:id="@+id/iv_profile_tabbar_userinfo"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_grey_user"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/INFO"
                                android:textColor="@color/white"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                    </RelativeLayout>
                    <!--media-->
                    <RelativeLayout
                        android:id="@+id/rl_profile_media"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dimen_4dp"
                            android:background="@color/white"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:id="@+id/iv_profile_tabbar_media"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_grey_friend"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/MEDIA"
                                android:textColor="@color/white"
                                android:layout_marginTop="@dimen/dimen_4dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dimen_4dp"
                            android:background="@color/white"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <!--friend-->
                    <RelativeLayout
                        android:id="@+id/rl_profile_friend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal">
                            <TextView
                                android:id="@+id/tv_profile_friends_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="333"
                                android:textSize="40dp"
                                android:textColor="@color/my_theme_color"
                                android:maxLength="4"
                                android:layout_marginTop="-8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/FRIEND"
                                android:textColor="@color/white"
                                android:layout_marginTop="-8dp"
                                />
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <!--avatar-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rl_profile_header_media"
            android:layout_marginBottom="-40dp"
            android:layout_marginLeft="@dimen/dimen_28dp">
            <com.heyoe_chat.widget.MyCircularImageView
                android:id="@+id/civ_profile_av"
                android:layout_width="@dimen/avatar_bg_size_profile"
                android:layout_height="@dimen/avatar_bg_size_profile"
                android:src="@drawable/bg_circle_white"
                android:layout_centerInParent="true"
                />
            <com.heyoe_chat.widget.MyCircularImageView
                android:id="@+id/civ_profile_avatar"
                android:layout_width="@dimen/avatar_size_profile"
                android:layout_height="@dimen/avatar_size_profile"
                android:src="@drawable/default_user"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>
