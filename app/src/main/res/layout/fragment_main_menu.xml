<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heyoe.controller.fragments.SignupFragment"
    android:background="@drawable/bg_green">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:gravity="center_horizontal">
        <!--profile photo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/green_menu_banner"/>
                <ImageView
                    android:id="@+id/iv_menu_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/green_menu_banner_noeffect"/>

                <!--avatar-->
                <RelativeLayout
                    android:id="@+id/rl_menu_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/tv_menu_fullname"
                    android:layout_marginBottom="8dp"
                    >
                    <ImageView
                        android:id="@+id/iv_menu_default_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/default_circular_user_photo"
                        android:layout_centerInParent="true"
                        />
                    <ImageView
                        android:id="@+id/iv_menu_white_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/white_circle_border"
                        android:layout_centerInParent="true"

                        />
                    <com.heyoe.widget.MyCircularImageView
                        android:id="@+id/civ_menu_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dimen_8dp"
                    />

                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_menu_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esteban"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_18sp"
                    android:layout_marginBottom="50dp"
                    android:layout_alignParentBottom="true"
                    />
                <ImageView
                    android:id="@+id/iv_menu_celebrity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check"
                    android:layout_toRightOf="@+id/tv_menu_fullname"
                    android:layout_below="@+id/rl_menu_avatar"
                    android:layout_marginLeft="@dimen/dimen_8dp"/>
            </RelativeLayout>
        </LinearLayout>
        <ListView
            android:id="@+id/lv_menu_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.9">

        </ListView>
    </LinearLayout>

</FrameLayout>
