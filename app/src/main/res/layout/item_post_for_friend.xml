<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <com.heyoe.widget.MyCircularImageView
                android:id="@+id/civ_ipff_avatar"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:src="@drawable/user3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_12dp">
                <TextView
                    android:id="@+id/tv_ipff_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Esra"
                    android:textSize="@dimen/txt_18sp"
                    android:singleLine="true"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_ipff_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_14sp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="3 weeks ago"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_ipff_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello, everybody"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <!--media-->
    <!--<RelativeLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/post1"/>-->
        <!--<ImageView-->
            <!--android:layout_width="@dimen/dimen_28dp"-->
            <!--android:layout_height="@dimen/dimen_28dp"-->
            <!--android:src="@drawable/ic_favorite_star_empty"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_margin="@dimen/dimen_16dp"/>-->
    <!--</RelativeLayout>-->
    <!--social icons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_ipff_like"
            android:layout_width="@dimen/social_button_size"
            android:layout_height="@dimen/social_button_size"
            android:src="@drawable/ic_like_dark_border"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_20dp"/>
        <ImageButton
            android:id="@+id/ib_ipff_unlike"
            android:layout_width="@dimen/social_button_size"
            android:layout_height="@dimen/social_button_size"
            android:src="@drawable/ic_unlike_dark_border"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_20dp"/>
        <ImageButton
            android:id="@+id/ib_ipff_comment"
            android:layout_width="@dimen/social_button_size"
            android:layout_height="@dimen/social_button_size"
            android:src="@drawable/comment_dark_boarder"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_20dp"/>
        <ImageButton
            android:id="@+id/ib_ipff_share"
            android:layout_width="@dimen/social_button_size"
            android:layout_height="@dimen/social_button_size"
            android:src="@drawable/ic_share_dark_border"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_20dp"/>
    </LinearLayout>
    <!--social activity count-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20dp"
        >
        <!--like count-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_green_heart"
                />
            <TextView
                android:id="@+id/tv_ipff_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="14dp"
                android:textStyle="bold"
                android:text="0"/>
        </LinearLayout>
        <!--unlike count-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_8dp">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_green_unlike"
                />
            <TextView
                android:id="@+id/tv_ipff_unlike_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="14dp"
                android:textStyle="bold"
                android:text="0"/>
        </LinearLayout>
        <!--comments-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_8dp">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_green_chat_bubble"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--comment 1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_8dp">
                    <TextView
                        android:id="@+id/tv_ipff_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="18dp"
                        android:textStyle="bold"
                        android:text=""
                        android:maxLength="20"
                        android:singleLine="true"/>
                    <TextView
                        android:id="@+id/tv_ipff_comment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:text=""/>
                </LinearLayout>
                <!--comment 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_8dp">
                    <TextView
                        android:id="@+id/tv_ipff_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="18dp"
                        android:textStyle="bold"
                        android:text=""
                        android:maxLength="20"
                        android:singleLine="true"/>
                    <TextView
                        android:id="@+id/tv_ipff_comment2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:text=""/>
                </LinearLayout>
                <!--comment 3-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_8dp">
                    <TextView
                        android:id="@+id/tv_ipff_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="18dp"
                        android:textStyle="bold"
                        android:text=""
                        android:maxLength="20"
                        android:singleLine="true"/>
                    <TextView
                        android:id="@+id/tv_ipff_comment3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:text=""/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_ipff_checkout_all_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/checkout_all_comment"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginLeft="@dimen/dimen_16dp"/>
            </LinearLayout>

        </LinearLayout>
        <!--viewed count-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_8dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_viewed_count"
                />
            <TextView
                android:id="@+id/tv_ipff_viewed_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="18dp"
                android:textStyle="bold"
                android:text="0"/>
        </LinearLayout>
        <!--shared count-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_8dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_shared_count"
                />
            <TextView
                android:id="@+id/tv_ipff_shared_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="18dp"
                android:textStyle="bold"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
