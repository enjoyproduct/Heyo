<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_12dp">
        <!--avatar-->
        <com.heyoe.widget.MyCircularImageView
            android:id="@+id/civ_if_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:src="@drawable/default_user"

            />
        <!--description-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/civ_if_avatar"
            android:layout_toLeftOf="@+id/rl_if_social"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_12dp">
            <TextView
                android:id="@+id/tv_if_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Madeline Kennedy"
                android:maxLines="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:src="@drawable/ic_green_circle"/>
                <TextView
                    android:id="@+id/tv_if_last_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
        <!--social icon-->
        <RelativeLayout
            android:id="@+id/rl_if_social"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/iv_if_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_double_chat_bubble_green"
                android:layout_centerInParent="true"
                android:background="@color/transparent"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
