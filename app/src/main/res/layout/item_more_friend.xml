<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_12dp">
        <!--avatar-->
        <com.heyoe_chat.widget.MyCircularImageView
            android:id="@+id/civ_imf_friend_avatar3"
            android:layout_width="@dimen/avatar_bg_size"
            android:layout_height="@dimen/avatar_bg_size"
            android:src="@drawable/default_user"

            />
        <!--description-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/civ_imf_friend_avatar3"
            android:layout_toLeftOf="@+id/rl_imf_social"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_imf_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text=""
                android:maxLines="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <!--<ImageView-->
                    <!--android:layout_width="@dimen/dimen_20dp"-->
                    <!--android:layout_height="@dimen/dimen_20dp"-->
                    <!--android:src="@drawable/ic_green_circle"/>-->
                <TextView
                    android:id="@+id/tv_imf_aboutme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
        <!--social icon-->
        <RelativeLayout
            android:id="@+id/rl_imf_social"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageButton
                android:id="@+id/ib_imf_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_green_plus"
                android:layout_centerInParent="true"
                android:padding="@dimen/dimen_12dp"
                android:background="@color/transparent"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
